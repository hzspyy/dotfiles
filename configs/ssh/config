# === Connection multiplexing & keepalive (useful for many long-lived sessions) ===
# Enables reusing a single connection for multiple sessions to the same host.
ControlMaster auto
ControlPath ~/.ssh/control-%C
ControlPersist 720

# Send heartbeat every 60s when idle to keep connection alive
ServerAliveInterval 60
ServerAliveCountMax 3

# Add keys to agent when used and prefer publickey auth
AddKeysToAgent yes
PreferredAuthentications publickey

# (Optional) Do not enable StrictHostKeyChecking by default â€” keep commented to avoid security risk
# StrictHostKeyChecking no

Host github.com
    Hostname ssh.github.com
    Port 443
    User git
